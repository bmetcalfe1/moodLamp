
<div class="container">
  <div class="center">
    <h3>FIND OR CREATE YOUR MEETING</h3>

    <div class="profile-form">
      <h5>Create your meeting.</h5>
         <form id="meetingForm" action="/meetings" method="POST">
         <label for="meetingName">Meeting Name</label>
         <input type="meetingName" name="meetingName" id="meetingName" placeholder="Call with CEO" autofocus>
         <button type="submit">Create</button>
       </form>
    </div>

    <div class="profile-form">
      <h5>Find your meeting.</h5>
    </div>

  </div>
</div>

<div class="container">
    <div id="meetings" class="row list-group">
        {{#each meetings}}
            <div class="item  col-xs-4 col-lg-4">
                <div class="thumbnail">
                    <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">{{this.name}}</h4>
                        <p class="group inner list-group-item-text">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead"></p>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <a class="btn btn-success btn-joinmeeting" href="/meeting/{{this._id}}">JOIN MEETING</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<ul id="transcripts">
</ul>
